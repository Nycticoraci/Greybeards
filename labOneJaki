//  9/25/2020
//  lab one: traffic light controller
//  group: greybeards

int ledRed = 8;
int ledYellow = 9;
int ledGreen = 10;
int button = 11;
int buzzer = 12;

void setup()
{
  pinMode(ledRed, OUTPUT);
  pinMode(ledYellow, OUTPUT);
  pinMode(ledGreen, OUTPUT);
  pinMode(buzzer,OUTPUT);
  pinMode(button, INPUT_PULLUP);
}

void loop()
{
  //flash red LED until button == low

  digitalWrite(ledRed, HIGH);
  delay(1000);
  digitalWrite(ledRed, LOW);
  delay(1000);

   if (digitalRead(button) == LOW)
   {
    while(1)
      {
      //Red light on for 15 seconds, then off
      digitalWrite(ledRed, HIGH);
      delay(12000);
      //buzzer delay 3000
      digitalWrite(buzzer, HIGH);
      delay(3000);
      digitalWrite(buzzer, LOW);
      digitalWrite(ledRed, LOW);

      //Green light on for 15 seconds, then off
      digitalWrite(ledGreen, HIGH);
      delay(12000);
      //buzzer delay 3000
      digitalWrite(buzzer, HIGH);
      delay(3000);
      digitalWrite(buzzer, LOW);
      digitalWrite(ledGreen, LOW);

      //Yellow on for 3 seconds then off
      digitalWrite(ledYellow, HIGH);
      //buzzer delay 3000
      digitalWrite(buzzer, HIGH);
      delay(3000);
      digitalWrite(buzzer, LOW);
      digitalWrite(ledYellow, LOW);

      //repeat R-G-Y sequence
      }
   }
}
